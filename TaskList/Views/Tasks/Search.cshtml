@model System.Linq.IQueryable<TaskList.Domain.Models.Task>

@{
    ViewBag.Title = "Search";
    int view = 0;
}

<h3>Welcome @ViewBag.FirstName</h3>
<p>Here are your tasks you have requested</p>

<table class="table">
    <tr>
        <th>
            Description
        </th>
        <th>
            Due Date
        </th>
        <th>
            Days Left
        </th>
        <th>
            Completed
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.Display(((DateTime.Now - item.DueDate).Days).ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complete)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Complete", "Complete", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Show All Tasks", "Index", new { view })
</div>